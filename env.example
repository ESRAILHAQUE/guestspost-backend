# Server Configuration
NODE_ENV=development
PORT=5000
API_VERSION=v1

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/guestpost_db
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/guestpost_db

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your_super_secret_refresh_token_key
JWT_REFRESH_EXPIRES_IN=30d

# CORS Configuration
# Add your frontend URLs here (comma-separated)
CORS_ORIGIN=http://localhost:3000,https://guestspost.netlify.app,https://guestpostnow.io
ALLOWED_ORIGINS=http://localhost:3000,https://guestspost.netlify.app,https://guestpostnow.io

# Email Configuration (for Nodemailer)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-specific-password
EMAIL_FROM=noreply@guestpostnow.io

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Admin Credentials (for initial setup)
ADMIN_EMAIL=admin@guestpostnow.io
ADMIN_PASSWORD=Admin@123456

# Application URL
APP_URL=http://localhost:5000
# Production frontend URL (Netlify)
FRONTEND_URL=https://guestspost.netlify.app
# For local development, use: http://localhost:3000

# Security
BCRYPT_SALT_ROUNDS=12

# Logging
LOG_LEVEL=info

